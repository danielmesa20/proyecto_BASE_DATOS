<h2 class="text-center m-4">Pistas registradas</h2>
<div class="container p-2">
    <div class="row">
        {{#each pistas}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title ">Número de pista: {{ nPista }} </h5>
                        <p class="m-2">Distancia pista: {{ distPista }}</p>
                        <p class="m-2">IATA: {{ IATA }}</p>
                        <a href="/aviones/delete/{{ nPista }}" class="btn btn-danger"> Eliminar ruta</a>
                        <a href="/aviones/edit/{{ nPista }}" class="btn btn-secondary"> Editar ruta</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="com-me 4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay pistas registradas aún.</p>
                    <a href="/pistas/add">Create one!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>