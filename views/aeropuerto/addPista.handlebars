<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">

      <h1 class="text-center p-4">REGISTRAR UN PISTA</h1>
    
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}

    <form action="/aeropuertos/addPista" method="POST">
        <div class="form-group">
            <label for="sel1">Codigo IATA Aeropuerto</label>
                <select class="form-control" id="IATA" name="IATA">
                     {{#each aeropuertos}} 
                            <option>{{ IATA }}</option>
                    {{/each}}
                </select>
        </div>
        <div class="form-group">
          <label for="distPista">Distancia de la pista (M) </label>
          <input type="number" name="distPista" id="distPista" class="form-control" placeholder="Ejemplo: 3000" value="{{distPista}}" required>
        </div>
        <div class="text-center">
             <button type="submit" class="btn btn-danger btn-lg btn-block">Registrar</button>
        </div>
  
      </form>
        </div>
    </div>
</div>
