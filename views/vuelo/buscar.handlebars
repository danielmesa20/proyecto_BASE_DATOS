<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center">Buscar un vuelo</h1>
        
            {{#each errors}}
                <div class="error">
                <p> {{ text }}</p>
                </div>
            {{/each}}

            <form action="/vuelos/buscar" method="POST">

                <div class="form-group">
                    <label for="sel1">Origen</label>
                    <select class="form-control" id="origen" name="origen">
                        {{#each rutas}} 
                            <option>{{ origen }}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="sel1">Destino</label>
                    <select class="form-control" id="destino" name="destino">
                        {{#each rutas}} 
                            <option>{{ destino }}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="fechaS">Fecha salida</label>
                    <input id="dateS"  name="dateS" type="date" value="2019-01-01">
                </div>

                <div class="form-group">
                    <label for="fechaS">Fecha Llegada</label>
                    <input id="dateL"  name="dateL" type="date" value="2019-01-01">
                </div>

                <button type="submit" class="btn btn-danger  btn-lg btn-block">Buscar</button>
            
            </form>

        </div>
    </div>
</div>