<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
        <h1 class="text-center">Buscar un vuelo</h1>
      
        {{#each errors}}
            <div class="error">
            <p> {{ text }}</p>
            </div>
        {{/each}}

    <form action="/vuelos/buscar" method="POST">

        <div class="form-group">
            <label for="sel1">Origen</label>
            <select class="form-control" id="origen" name="origen" value={{ origen }}> 
                <option>Caracas</option>
                <option>Miami</option>
            </select>
        </div>

         <div class="form-group">
            <label for="sel1">Destino</label>
            <select class="form-control" id="destino" name="destino" value={{ destino }}>
                <option>Caracas</option>
                <option>Miami</option>
            </select>
        </div>

        <div class="form-group">
              <label for="fechaS">Fecha salida</label>
              <input id="dateS"  name="dateS" type="date" value="2008-03-08">
        </div>

         <div class="form-group">
              <label for="fechaS">Fecha salida</label>
              <input id="dateL"  name="dateL" type="date" value="2008-03-10">
        </div>

        <button type="submit" class="btn btn-danger  btn-lg btn-block">Buscar</button>
       
      </form>

        </div>
    </div>
</div>