<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center">Planificar un vuelo</h1>
        
            {{#each errors}}
                <div class="error">
                <p> {{ text }}</p>
                </div>
            {{/each}}

            <form action="/vuelos/crear" method="POST">

                <div class="form-group">
                    <label for="sel1">Ruta [Origen-Destino-Escala] </label>
                    <select class="form-control" id="ruta" name="ruta">
                        {{#each rutas }}  
                            <option> 
                                {{ nRuta }} - {{ origen }} - {{ destino }} 
                                {{#each Escalas }}
                                - {{ pais }}
                                {{else}}
                                - No tiene escala
                                {{/each}}
                            </option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="fechaS">Fecha salida</label>
                    <input id="dateS"  name="dateS" type="date" value="2019-04-08">
                </div>

                <div class="form-group">
                    <label for="fechaS">Fecha Llegada</label>
                    <input id="dateL"  name="dateL" type="date" value="2019-04-10">
                </div>

                {{#if aviones}}
                    <div class="form-group">
                            <label for="sel1">Aviones Disponibles</label>
                            <select class="form-control" id="avion" name="avion">
                                {{#each aviones }}
                                    <option> Matricula: {{matriculaAvion}}, distancia de despegue: {{ distDespegue }} (m) </option>
                                {{/each}}
                            </select>
                    </div>
                    <button type="submit" class="btn btn-danger  btn-lg btn-block">Crear</button>
                {{else}}
                     <a href="/vuelos/aux/{{ numeroVuelo }}" class="btn btn-secondary">Comprar</a>
                {{/if}}

                
            
            </form>

        </div>
    </div>
</div>