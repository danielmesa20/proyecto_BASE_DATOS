<h2 class="text-center m-4">Vuelos</h2>
<div class="container p-2">
    <div class="row">
        {{#each datos}}
            <div class="col-md-4">
                <div class="card text-justify">
                    <div class="card-body">
                        <h5 class="card-title text-center ">Número de vuelo: {{ Vuelo.numeroVuelo }} </h5>
                        <p class="m-2">Fecha salida programada: {{ Vuelo.fechaSalida }} </p>
                        <p class="m-2">Fecha llegada programada: {{ Vuelo.fechaLlegada }} </p>
                        <p class="m-2">Origen: {{ Vuelo.Ruta.origen }} </p>
                        <p class="m-2">Destino: {{ Vuelo.Ruta.destino }} </p>
                        {{#if fechaRealSalida}}
                        <p class="m-2">Fecha real salida: {{ Vuelo.fechaRealSalida }} </p>
                        {{/if}}
                        {{#if fechaRealLlegada}}
                        <p class="m-2">Fecha real llegada: {{ Vuelo.fechaRealLlegada }} </p>
                        {{/if}}
                        <p class="m-2">Asientos Clase Economica: {{ cAsientosCE }} </p>
                        <p class="m-2">Asientos Primera Clase: {{ cAsientosPC }} </p>
                        <div class="card text-center">
                             <a href="/vuelos/datos/{{ Vuelo.numeroVuelo }}" class="btn btn-secondary">Pasajeros</a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="com-me 4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay vuelos registrados aún.</p>
                    <a href="/vuelos/add">Create one!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>