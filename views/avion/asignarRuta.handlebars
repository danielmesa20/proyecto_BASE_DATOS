<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <h1 class="text-center">Asignar una ruta</h1>
        
            {{#each errors}}
                <div class="error">
                <p> {{ text }}</p>
                </div>
            {{/each}}

            <form action="/aviones/asignarRuta" method="POST">

                <div class="form-group">
                    <label for="sel1">Matricula Aviones registrados</label>
                    <select class="form-control" id="avion" name="avion">
                        {{#each aviones }}  
                            <option> {{ matriculaAvion }} </option>
                        {{/each}}
                    </select>
                </div>

                 <div class="form-group">
                    <label for="sel1">Rutas [Origen, Destino, Escala]</label>
                    <select class="form-control" id="ruta" name="ruta">
                        {{#each rutas }}  
                            <option> {{ nRuta }} - {{ origen }} - {{ destino }} 
                            {{#each Escalas}}
                            - {{ pais }}
                            {{else}}
                            - Sin escala
                            {{/each}}    
                            </option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-danger  btn-lg btn-block">Asignar</button>
            
            </form>

        </div>
    </div>
</div>