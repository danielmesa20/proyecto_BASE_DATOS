<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
        <h1>Buscar avión</h1>
        {{#each errors}}
          <div class="error">
            <p>{{text}}</p>
          </div>
        {{/each}}
        <form action="/aviones/buscar" method="POST">
            <div class="form-group">
              <label for="matriculaAvion">Matricula del avión</label>
              <input type="text" name="matriculaAvion" id="matriculaAvion" class="form-control" placeholder="Ejemplo: 00001" maxlength="256"  value={{matriculaAvion}}>
            </div>
            <div class="text-center">
             <button type="submit" class="btn btn-danger  btn-lg btn-block">Buscar</button>
        </div>
        </form>
        </div>
    </div>
</div>