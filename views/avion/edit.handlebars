<div class="container p-4 text-center">
    <h1>Editar datos avión</h1>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/aviones/edit/{{avion.matriculaAvion}}" method="POST">
                        <p>Matricula del avión</p>
                        <div class="form-group">
                            <input type="text" value="{{avion.matriculaAvion}}" class="form-control" name="matriculaAvion" disabled>
                        </div>
                        <p>Fabricante del avión</p>
                        <div class="form-group">
                            <input type="text" value="{{avion.fabricante}}" class="form-control" name="fabricante">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{avion.modelo}}" class="form-control" name="modelo">
                        </div>
                         <div class="form-group">
                            <input type="number" value="{{avion.vMaxima}}" class="form-control" name="vMaxima">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{avion.vCruzero}}" class="form-control" name="vCruzero">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{avion.cargMaxE}}" class="form-control" name="cargMaxE">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{avion.cargMaxC}}" class="form-control" name="cargMaxC">
                        </div>
                         <div class="form-group">
                            <input type="number" value="{{avion.cantTel}}" class="form-control" name="cantTel">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block"> Actualizar </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>