<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">

      <h1 class="text-center">Agregar un avión</h1>
      
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}

    <form action="/aviones/add" method="POST">
        <div class="form-group">
          <label for="numero_avion">Número del avión</label>
          <input type="number" name="numero_avion" id="numero_avion" class="form-control" placeholder="Ejemplo: 00001" maxlength="11"  value={{numero_avion}}>
        </div>
        <div class="form-group">
          <label for="fabricante">Fabricante del avión</label>
          <input type="text" name="fabricante" id="fabricante" class="form-control" placeholder="Ejemplo: Airbus, EADS, Boeing" maxlength="256"  value={{fabricante}}>
        </div>
        <div class="form-group">
          <label for="modelo">Modelo del avión</label>
        <input type="text" name="modelo" id="modelo" class="form-control" placeholder="Ejemplo: Tu-204, A320, CRJ200" maxlength="256" value={{modelo}}>
        </div>
        <div class="form-group">
          <label for="velocidad_max">Velocidad Máxima (Km/h)</label>
            <input type="number" name="velocidad_max" id="velocidad_max" class="form-control" placeholder="Ejemplo: 300" value={{velocidad_max}}>
        </div>
        <div class="text-center">
             <button type="submit" class="btn btn-danger btn-lg btn-block">Añadir</button>
        </div>
       
      </form>

        </div>
    </div>
</div>


